# ===========================================
# MySQL Database Configuration
# ===========================================
MYSQL_ROOT_PASSWORD=your_secure_mysql_password_here
MYSQL_DATABASE=hotel_booking

# ===========================================
# MongoDB Configuration
# ===========================================
MONGO_USERNAME=your_mongo_username_here
MONGO_PASSWORD=your_secure_mongo_password_here
MONGO_INITDB_DATABASE=hotelbooking

# ===========================================
# JWT Configuration (User Service)
# ===========================================
# Generate a secure base64 encoded secret key
# Example: openssl rand -base64 32
JWT_SECRET_KEY=your_base64_encoded_jwt_secret_here
JWT_EXPIRATION=86400000

# ===========================================
# Stripe Payment Configuration
# ===========================================
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# ===========================================
# Keycloak Configuration
# ===========================================
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=your_secure_keycloak_admin_password_here

# Discovery Service
# EUREKA_PORT=8671

# API Gateway
# API_GATEWAY_PORT=8900

# User Service
# USER_SERVICE_PORT=8081

# Payment Service
# PAYMENT_SERVICE_PORT=8082

# Order Service
# ORDER_SERVICE_PORT=8083

# Hotel Service
# HOTEL_SERVICE_PORT=8084

# Zipkin Tracing
# ZIPKIN_PORT=9411

# Keycloak
# KEYCLOAK_PORT=8181